{
  "name": "ajahks-bot-data-collector",
  "version": "1.0.0",
  "description": "A data collector using discordjs to pull messages to feed into a llm",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run build-templates && npm run build-app && npm run test",
    "build-app": "npx tsc",
    "build-templates": "npm run build-background-template && npm run build-discord-config-template",
    "build-background-template": "sh -c '[ ! -e ./src/context/background.ts ] && cp ./src/context/background-template.ts ./src/context/background.ts || true'",
    "build-discord-config-template": "sh -c '[ ! -e ./config/discord/config.json ] && cp ./config/discord/config-template.json ./config/discord/config.json || true'",
    "copy-data": "mkdir -p dist && cp -r ./data ./dist/data",
    "start": "node ./dist/app.js",
    "init-db": "mkdir -p ./data && node ./dist/llm/rag/knowledgeBaseInitializer.js",
    "init-memory": "mkdir -p ./data && node ./dist/llm/persistence/memory/v2/memoryInitializer.js",
    "test": "NODE_OPTIONS='--localstorage-file=./.test-localstorage' jest"
  },
  "author": "Arren De Manuel",
  "license": "ISC",
  "dependencies": {
    "cli-spinner": "^0.2.10",
    "discord.js": "^14.15.3",
    "ollama": "^0.5.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cli-spinner": "^0.2.3",
    "@types/jest": "^30.0.0",
    "eslint": "^9.17.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.2"
  }
}
